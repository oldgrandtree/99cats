<h1>Cat Rental Request</h1>

<% unless @cat_rental_request.errors.blank? %>
<p><%= @cat_rental_request.errors.full_messages %></p>
<% end %>

<form action="<%= cat_rental_requests_url %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label>
    Choose a Cat:
    <select name="cat_rental_request[cat_id]">
      <option value=""></option>
      <% @cats.each do |cat| %>
      <option value="<%= cat.id %>" <%= "selected" if @cat_rental_request.cat_id == cat.id %>>
        <%= cat.name %>
      </option>
      <% end %>
    </select>
  </label>

  <br>

  <label>
    Start Date
    <input type="date" name="cat_rental_request[start_date]" value=
      "<%= @cat_rental_request.start_date %>">
  </label>

  <label>
    End Date
    <input type="date" name="cat_rental_request[end_date]" value=
      "<%= @cat_rental_request.end_date %>">
  </label>
  <button>Submit Request</button>

</form>